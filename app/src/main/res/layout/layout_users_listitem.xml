<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout_users"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"

            />
        <View
            android:layout_toRightOf="@id/user_img"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:id="@+id/view_space"
            />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view_space"
                android:text="tourist"
                android:textColor="#871461"
                android:textSize="20sp"
                android:layout_toLeftOf="@id/user_rating"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_below="@id/user_name"
                android:id="@+id/user_latest_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last rating update: Jun 18, 2020"
                android:textColor="#7d7a7c"
                android:textSize="12sp"
                android:layout_toRightOf="@id/view_space"
                android:ellipsize="end"

                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_rating"
            android:textSize="20sp"
            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_rating_change"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_below="@id/user_rating"
            android:text="0"
            android:layout_marginLeft="5dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/user_img"
            android:background="#e6e6e6" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>